<idea-plugin>
    <id>com.github.y0ung3r.gitglobalhookslocator</id>
    <name>Git Global Hooks Locator</name>
    <vendor>y0ung3r</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.LocatorBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij.openapi.vcs.ui">
        <commitOptionsDialogExtension implementation="com.github.y0ung3r.gitglobalhookslocator.ui.commitOptions.GlobalHooksCommitOptions"/>
    </extensions>
</idea-plugin>
